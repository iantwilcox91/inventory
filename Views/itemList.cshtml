<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Inventory</title>
  </head>
  <body>
    @if (@Model.Count == 0)
    {
      <p>There are no items</p>
    }
    else
    {
      <h1>Your items include:</h1>
      <ul>
        @foreach (var Item in Model)
        {
          <li>@Item.GetDescription()</li>
        }
      </ul>
      <form action="/deleted" method="post">
    <button type="submit">Clear all tasks</button>
  </form>
    }
    <p><a href="/">Add a new task</a></p>
  </body>
</html>
